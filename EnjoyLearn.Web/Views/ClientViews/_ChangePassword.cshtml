@using EnjoyLearn.Web.Helpers
<div id="profile-page" ng-controller="ChangePasswordController">
    <form name="form" ng-submit="changePassword()" novalidate>
        @Html.ClientView("ModelErrors")
        <field-group for="oldPassword">
        <label class="control-label" for="change-password-old">Old password</label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-key"></i></span>
            <input
              id="change-password-old"
              name="oldPassword"
              type="password"
              ng-model="password.oldPassword"
              ng-required="true" 
              autofocus />
          </div>
        </div>
        <validation-message
          for="oldPassword"
          required="Old password is required." />
      </field-group>
        <field-group for="newPassword">
        <label class="control-label" for="change-password-new">New password</label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-key"></i></span>
            <input
              id="change-password-new"
              name="newPassword"
              type="password"
              ng-model="password.newPassword"
              ng-required="true"
              ng-minlength="6" />
          </div>
        </div>
        <validation-message
          for="newPassword"
          required="New password is required."
          minlength="New password must be at least 6 characters." />
      </field-group>
        <field-group for="confirmPassword">
        <label class="control-label" for="change-password-confirm">
          Confirm password
        </label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-key"></i></span>
            <input
              id="change-password-confirm"
              name="confirmPassword"
              type="password"
              ng-model="password.confirmPassword"
              ui-validate="'$value==password.newPassword'"
              ui-validate-watch="'password.newPassword'" />
          </div>
        </div>
        <validation-message
          for="confirmPassword"
          validator="Confirm password must be same as new password." />
      </field-group>
        <div class="form-actions">
            <submit-button>Submit</submit-button>
        </div>
    </form>
</div>
