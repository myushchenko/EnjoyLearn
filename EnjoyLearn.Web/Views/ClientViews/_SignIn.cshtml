@using EnjoyLearn.Web.Helpers
<div ng-controller="SignInController">
    <form name="form" ng-submit="submit()" novalidate>
        @Html.ClientView("ModelErrors")
        <field-group for="email">
        <label class="control-label" for="sign-in-email">User Name</label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-envelope"></i></span>
            <input
              id="sign-in-email"
              name="email"
              type="text"
              ng-model="session.UserName"
              ng-required="true"
              autofocus />
          </div>
        </div>
        <validation-message
          for="email"
          required="User Name is required." />
      </field-group>
        <field-group for="password">
        <label class="control-label" for="sign-in-password">
          Password
          (<a href="@Url.ClientUrl("forgot-password")" tabindex="-1">forgot?</a>)
        </label>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-key"></i></span>
            <input
              id="sign-in-password"
              name="password"
              type="password"
              ng-model="session.Password"
              ng-required="true" />
          </div>
        </div>
        <validation-message
          for="password"
          required="Password is required." />
      </field-group>
        <div class="control-group">
            <label class="checkbox">
                <input
                    id="sign-in-remember-me"
                    name="rememberMe"
                    type="checkbox"
                    value="true"
                    ng-model="session.RememberMe" />
                <span>Keep me remembered</span>
            </label>
        </div>
        <div class="form-actions">
            <submit-button>Submit</submit-button>
            or Sign up if you do not have any account.
        </div>
    </form>
</div>
